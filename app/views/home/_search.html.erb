<p>検索　</p>

<%= form_tag(search_path,:method => 'get') do %>
<%= select_tag 'name', options_for_select([["User", 1], ["Book", 2]]) %>
<%= select_tag 'method', options_for_select([["前方一致", "a"], ["後方一致", "b"], ["完全一致", "c"], ["部分一致", "d"]]) %>
	<%= text_field_tag :search %>
	<%= submit_tag 'Search', :name => nil %>
<% end %>
<div class="container">
	<div class="row">


<h1>User info</h1>

<% if @user.errors.any? %>
<div id ="error_explanation" class="error">
<h2><%= @user.errors.count %>error prohibited this odj from being saved:</h2>
	<ul>
		<% @user.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<form method="post" action="<%= user_path(@user.id) %>" enctype="multipart/form-data">
	<input type="hidden" name="_method" value="patch">
	<input type="hidden" name="authenticity_token" value="<%= session[:_csrf_token] %>">
<div class="form-group">
	<label for="user[name]">Name</label>
	<input name="user[name]" value="<%= @user.name %>" class="form-control">
</div>
<div class="form-group">
	<label for="user[profile_image]">Image</label>
	<input type="file" name="user[profile_image]" class="form-control">
</div>
<div class="form-group">
	<label for="user[introduction]">Introduction</label>
	<input name="user[introduction]" value="<%= @user.introduction %>" class="form-control">
</div>

	<input type="submit" value="Update User" class="btn btn-default">
</form>


	</div>
</div>

<%= render 'home/footer' %>
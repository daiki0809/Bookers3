
	<div class="container">
	<div class="row">
	<h1>Editing Book</h1>
<% if @post.errors.any? %>
<div id ="error_explanation" class="error">
<h2><%= @post.errors.count %>error prohibited this odj from being saved:</h2>
	<ul>
		<% @post.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<form method="POST" action="<%= book_path(@post.id) %>">
	<input type="hidden" name="_method" value="patch">
	<input type="hidden" name="authenticity_token" value="<%= session[:_csrf_token] %>">
<div class="form-group">
	<P><strong>
		<label for="book[title]">Title</label>
		</strong>
	</P>

	<input class="form-control" name="book[title]" value="<%= @post.title %>">
</div>
<div class="form-group">
	<P><strong>
		<label for="book[body]">Opinion</label>
		</strong>
	</P>

	<input class="form-control" name="book[body]" value="<%= @post.body %>">
</div>
<div class="form-group">
	<input class="btn btn-default" type="submit" value="update book">
</div>
</form>

	<p><%= link_to 'Show', book_path(@post.id) %> | <%= link_to 'Back', books_path %>
	</p>

	</div>
	</div>

